# declare a couple known dimensions
dim length;
dim time;

# declare the base units for each dimension
unit m = base si length;
unit s = base time;

# derived length conversion units
unit ft = 1250 / 381 m;
unit in = 12 / 1 ft;
unit yd = 3 ft;
unit mi = 5280 ft;

# derived time conversion units
unit min = 1 / 60 s;
unit hr  = 1 / 60 min;
unit day = 1 / 24 hr;

# derived speed units
unit kph = km / hr;
unit mph = mi / hr;

# create acre
unit acre = 1 / 43560 ft^2
